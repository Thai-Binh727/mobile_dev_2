                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end" />

                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Second half - LinearLayout with vertical orientation -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@color/black">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:src="@drawable/animal_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:shapeAppearanceOverlay="@style/round_image"/>

                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/search_end_2"
                            android:alpha="0.0"
                            android:layout_height="match_parent">

                        </Button>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:src="@drawable/animal_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:shapeAppearanceOverlay="@style/round_image"/>

                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/search_end_4"
                            android:alpha="0.0"
                            android:layout_height="match_parent">

                        </Button>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:src="@drawable/beauty_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:shapeAppearanceOverlay="@style/round_image"/>

                        <FrameLayout
