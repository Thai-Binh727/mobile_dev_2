                                android:gravity="start" />

                            <ImageView
                                android:paddingEnd="5dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/dots_white"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
