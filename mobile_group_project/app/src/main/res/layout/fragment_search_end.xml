                            android:layout_height="wrap_content" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:text="Just a girl"
                                android:textColor="@color/white"
                                android:gravity="start" />

                            <ImageView
                                android:paddingEnd="5dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/dots_white"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:src="@drawable/wallpaper_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:shapeAppearanceOverlay="@style/round_image"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:text="Rick and Morty"
                                android:textColor="@color/white"
                                android:gravity="start" />

                            <ImageView
                                android:paddingEnd="5dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/dots_white"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:src="@drawable/wallpaper_25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:shapeAppearanceOverlay="@style/round_image"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:text="IDK"
                                android:textColor="@color/white"
                                android:gravity="start" />

                            <ImageView
                                android:paddingEnd="5dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/dots_white"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:src="@drawable/door"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:shapeAppearanceOverlay="@style/round_image"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:text="Pink Door"
                                android:textColor="@color/white"
                                android:gravity="start" />

                            <ImageView
                                android:paddingEnd="5dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/dots_white"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:src="@drawable/anime_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:shapeAppearanceOverlay="@style/round_image"/>

